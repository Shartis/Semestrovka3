@{
}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Nazox - Angular 10 Admin & Dashboard Template | Docs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Nazox is a fully featured premium Angular 9 admin dashboard template built on top of awesome Bootstrap 4.4.1" name="description" />
    <meta content="ThemesDesign" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/customlib/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/customlib/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/customlib/assets/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body data-sidebar="dark">

    <!-- Begin page -->
    <div id="layout-wrapper">

        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">

                        <a href="~/index.html" class="logo logo-light">
                            <span class="logo-sm">
                                <img src="~/customlib/assets/images/logo-sm-light.png" alt="" height="22">
                            </span>
                            <span class="logo-lg">
                                <img src="~/customlib/assets/images/logo-light.png" alt="" height="20">
                            </span>
                        </a>
                    </div>

                    <button type="button" class="btn btn-sm px-3 font-size-24 header-item waves-effect" id="vertical-menu-btn">
                        <i class="mdi mdi-backburger"></i>
                    </button>

                </div>

                <div class="d-flex">

                    <div class="d-inline-block">
                        <h5><span class="badge badge-danger float-right">v1.0.0</span></h5>
                    </div>

                </div>
            </div>
        </header>

        <!-- ========== Left Sidebar Start ========== -->
        <div class="vertical-menu">

            <div data-simplebar class="h-100">

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                    <ul class="metismenu list-unstyled" id="side-menu">
                        <li class="menu-title">Текст</li>

                        <li>
                            <a asp-controller="Admin" asp-action="AddTag" class="waves-effect">
                                <i class="mdi mdi-file-document-box-outline"></i>
                                <span>Add Tag</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Admin" asp-action="AddArticle" class="waves-effect">
                                <i class="mdi mdi-file-document-box-outline"></i>
                                <span>Article</span>
                            </a>
                        </li>                       

                    </ul>

                </div>
                <!-- Sidebar -->
            </div>
        </div>
        <!-- Left Sidebar End -->
        <!-- end main content-->
            @RenderBody()
    </div>
    <!-- END layout-wrapper -->
    <!-- JAVASCRIPT -->
    <script src="~/customlib/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/customlib/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/customlib/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/customlib/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/customlib/assets/libs/node-waves/waves.min.js"></script>

    <script src="~/customlib/assets/customjs/app.js"></script>

</body>

</html>